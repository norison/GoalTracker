<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="GoalTracker.UI.Pages.Mobile.MobileShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:commonPages="clr-namespace:GoalTracker.UI.Pages.Common"
    Title="Goal Tracker">

    <TabBar>
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate commonPages:DashboardPage}" />
        </Tab>
        
        <Tab Title="Goals">
            <ShellContent ContentTemplate="{DataTemplate commonPages:GoalsPage}" />
        </Tab>
    </TabBar>
    
</Shell>